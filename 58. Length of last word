//LeetCode 58. Length of last word
class Solution {
    public int lengthOfLastWord(String s) {
        String str= s.trim(); // removes whitespace from both ends of a string.
        int length=0;

        for(int i= str.length()-1 ; i>=0 ; i--){
            if(str.charAt(i) != ' '){
                length++;
            } else{
                break;
            }
        }
     return length;

    }
}
